{
  "compilerOptions": {
    "outDir": "dist",         
    "rootDir": "src",          
    "module": "commonjs",
    "target": "ES6",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}